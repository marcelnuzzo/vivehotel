{% extends 'base.html.twig' %}

{% form_theme registrationForm 'bootstrap_4_layout.html.twig' %}

{% block title %}Register{% endblock %}

{% block body %}
    <div class = "jumbotron">
        <div style="text-align:center">
            <h1>Inscription</h1>
        </div>
    </div>
    
    <div class="container">
        {{ form_start(registrationForm) }}
        <div class="input-group input-group-lg">
            <span class="input-group-addon"><i class="fa fa-user gi-2x"></i>&nbsp&nbsp&nbsp</span>
            {{ form_row(registrationForm.lastName, {'attr': {'placeholder': "Nom de l'utilisateur"}} ) }}
        </div>
        <div class="input-group input-group-lg">
            <span class="input-group-addon"><i class="fa fa-user gi-2x"></i>&nbsp&nbsp&nbsp</span>
            {{ form_row(registrationForm.firstName, {'attr': {'placeholder': "Pr√©nom de l'utilisateur"}} ) }}
        </div>
        <div class="input-group input-group-lg">
            <span class="input-group-addon"><i class="fa fa-envelope gi-2x"></i>&nbsp&nbsp&nbsp</span>
            {{ form_row(registrationForm.email, {'attr': {'placeholder': "Email de l'utilisateur"}} ) }}
        </div>
        <div class="input-group input-group-lg">
            <span class="input-group-addon"><i class="fa fa-key gi-2x"></i>&nbsp&nbsp&nbsp</span>
            {{ form_row(registrationForm.plainPassword, {'attr': {'placeholder': "Mot de passe de l'utilisateur"}} ) }}
        </div>
            {{ form_row(registrationForm.agreeTerms, {'attr': {'label': "Se rappeler de moi"}} ) }}
            
            <button class="btn btn-info">Register</button>
        {{ form_end(registrationForm) }}
    </div>
{% endblock %}
