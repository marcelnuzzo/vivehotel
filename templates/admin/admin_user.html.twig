{% extends 'admin_base.html.twig' %}

{% block title %}Liste des utilisateurs{% endblock %}

{% block body %}

<div class = "jumbotron">
    <h1 style="text-align:center"><mark>Users</mark></h1>
    <a href="{{ path('home') }}" class="btn btn-info">Retour au menu principale</a> 
</div>
<a class="btn btn-warning" style="color:white" href="{{ path("app_register") }}" role="button" >Créer</a>
<hr>
<table class="table table-striped table-bordered table-hover">
    <tr>
        <th>Id</th>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Email</th>
        <th>Password</th>
    </tr>
    {%for user in users %}
        <tr>
            <td>{{ user.id }}</td>
            <td>{{ user.lastName }}</td>
            <td>{{ user.firstName }}</td>
            <td>{{ user.email }}</td>
            <td>{{ user.password|slice(0, 40) }}</td>
            <td><a class="btn btn-info" style="color:white" href="{{ path('admin_editUser', {'id':user.id}) }}" role="button" >Modifier</a></td>
            <td><a class="btn btn-danger" style="color:white" href="{{ path('admin_deleteUser', {'id':user.id}) }} " role="button" >Supprimer</a></td>
        </tr>
    {% endfor %}
</table>
{% endblock %}